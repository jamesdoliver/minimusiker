# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Airtable Configuration
AIRTABLE_API_KEY=your_airtable_api_key_here
AIRTABLE_BASE_ID=your_airtable_base_id_here

# Cloudflare R2 Configuration
R2_ENDPOINT=https://[account-id].r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your_r2_access_key_id_here
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key_here
R2_BUCKET_NAME=school-recordings
# New assets bucket for event structure, templates, printables (optional - falls back to R2_BUCKET_NAME)
R2_ASSETS_BUCKET_NAME=minimusiker-assets

# Shopify Configuration (2025 Dev Dashboard - Client Credentials Grant)
# Store domain (without https://)
SHOPIFY_STORE_DOMAIN=your-store.myshopify.com

# Client Credentials from Dev Dashboard (required for Admin API)
# These are used to request short-lived access tokens (24-hour expiry)
SHOPIFY_CLIENT_ID=your_client_id_from_dev_dashboard
SHOPIFY_CLIENT_SECRET=your_client_secret_from_dev_dashboard

# Storefront API token (for product queries on frontend)
NEXT_PUBLIC_SHOPIFY_STORE_DOMAIN=your-store.myshopify.com
NEXT_PUBLIC_SHOPIFY_STOREFRONT_ACCESS_TOKEN=your_storefront_access_token_here

# Webhook secret for verifying webhook signatures
SHOPIFY_WEBHOOK_SECRET=your_webhook_secret_here

# API version (defaults to 2025-01 if not set)
SHOPIFY_API_VERSION=2025-01

# Legacy: Static Admin API token (deprecated - use Client Credentials above)
# SHOPIFY_ADMIN_ACCESS_TOKEN=shpat_xxxxx

# Brevo Email Configuration
BREVO_API_KEY=xkeysib-your_api_key_here
BREVO_FROM_EMAIL=noreply@minimusiker.de
BREVO_FROM_NAME=MiniMusiker

# Brevo Template IDs (from Brevo dashboard)
BREVO_TEMPLATE_TEACHER_MAGIC_LINK=1
BREVO_TEMPLATE_RECORDING_READY=2
BREVO_TEMPLATE_NEW_BOOKING_ALERT=3
BREVO_TEMPLATE_PARENT_WELCOME=4

# Authentication Configuration
JWT_SECRET=your_super_secret_jwt_key_change_in_production
ADMIN_PASSWORD_HASH=your_bcrypt_hashed_admin_password_here

# SimplyBook Configuration
SIMPLY_BOOK_ACCOUNT_NAME=your_company_login_here
SIMPLYBOOK_API_KEY=your_api_key_here
SIMPLYBOOK_API_SECRET=your_webhook_secret_key_here
# Admin credentials for accessing booking list (required for getBookings API)
SIMPLYBOOK_USER_LOGIN=your_admin_username_here
SIMPLYBOOK_USER_PASSWORD=your_admin_password_here

# Analytics Configuration (Optional)
NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id_here

# Feature Flags (Optional)
ENABLE_EMAIL_CAMPAIGNS=true
ENABLE_DIGITAL_DELIVERY=true
ENABLE_SHOPIFY_INTEGRATION=false